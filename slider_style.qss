QSlider::groove:horizontal {
    border-radius: 3px;
    height: 8px;
    background: rgba(143,143,143,40);
    margin: 2px 0;
}

QSlider::low_rect:horizontal {
    background-color: rgb(143,143,143);
    border: 1px solid rgb(143,143,143);
    border-radius: 2px;
    width: 2px;
    margin: -3px 0;
}

QSlider::sub-page:horizontal {
    height: 8px;
    border-radius: 3px;
    margin: 2px 0;
    background: rgba(143,143,143,80);
}
